@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<InvoiceItem>
@{
    ViewBag.Title = "DetailsInvoice";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Fatura Detay Sayfası</h2>




<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.InvoiceItemID</td>
            <td>@x.Description</td>
            <td>@x.Quantity</td>
            <td>@x.Price</td>
            <td>@x.TotalPrice</td>
        </tr>
    }
</table>

<a href="/Invoice/AddInvoiceItem" class="btn btn-default" style="background-color:darkkhaki">Yeni Kalem Girişi</a>



