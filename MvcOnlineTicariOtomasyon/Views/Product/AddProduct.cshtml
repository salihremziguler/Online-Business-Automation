@using MvcOnlineTicariOtomasyon.Models.Classes
@model Product
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Ürün Ekleme</h2>
<br />

@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<form class="form-group" method="post">
    <label>Ürün Adı </label>
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control", @required = "" })
    <br />
    <label>Marka </label>
    @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
    <br />
    <label>Stok </label>
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    <label>Alış Fiyatı </label>
    @Html.TextBoxFor(x => x.PurchasePrice, new { @class = "form-control" })
    <br />
    <label>Satış Fiyatı </label>
    @Html.TextBoxFor(x => x.SalesPrice, new { @class = "form-control", @required = "" })
    <br />
    <br />
    <label>Ürün Görseli Seç: </label>
    <input type="file" name="ProductImagePath" required="" />
    <br />
    <br />
    <label>Kategori </label>
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.value, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary" type="submit" style="width:100px"><i class="fas fa-plus"></i> Ekle</button>
    <a class="btn btn-secondary" href="/Product/Index" style="width:100px;color:white"><i class="fas fa-backspace"></i> İptal</a>
</form>
}
<br />
