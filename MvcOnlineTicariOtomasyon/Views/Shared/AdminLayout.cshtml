
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Online Ticari Otomasyon</title>
    <link href="~/Web/dist/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand" href="/ToDoList/Index">Admin Dashbord</a><button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            <div class="input-group">
            </div>
        </form>
        <ul class="navbar-nav ml-auto ml-md-0">
            <li style="margin-top:6px;margin-right:5px">
                @Html.ActionLink(HttpContext.Current.User.Identity.Name, "Index", "ToDoList", null, null)
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link" href="/Login/Logout" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-power-off fa-fw"></i></a>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">İşlemler</div>
                        <a class="nav-link" href="/Category/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Kategoriler
                        </a>
                        <a class="nav-link" href="/Product/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-flask"></i></div>
                            Ürünler
                        </a>
                        <a class="nav-link" href="/Department/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-bars"></i></div>
                            Departmanlar
                        </a>
                        <a class="nav-link" href="/Current/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Cariler
                        </a>
                        <a class="nav-link" href="/Announcement/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Duyurular
                        </a>

                        @if (User.IsInRole("A"))
                        {
                            <a class="nav-link" href="/ToDoList/Admins">
                                <div class="sb-nav-link-icon"><i class="fas fa-lock"></i></div>
                                Adminler
                            </a>
                        }

                        <a class="nav-link" href="/Personel/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-street-view"></i></div>
                            Personeller
                        </a>


                        @if (User.IsInRole("A"))
                        {
                            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapsePages" aria-expanded="false" aria-controls="collapsePages">
                                <div class="sb-nav-link-icon"><i class="fas fa-chart-pie"></i></div>
                                Grafikler
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>

                        }
                        <div class="collapse" id="collapsePages" aria-labelledby="headingTwo" data-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav accordion" id="sidenavAccordionPages">
                                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#pagesCollapseAuth" aria-expanded="false" aria-controls="pagesCollapseAuth">
                                    Grafik Türleri
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>
                                <div class="collapse" id="pagesCollapseAuth" aria-labelledby="headingOne" data-parent="#sidenavAccordionPages">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" href="/Graphic/Index">Ürün Stok Pie</a>
                                        <a class="nav-link" href="/Graphic/BrandStockGraphic">Marka Stok</a>
                                        <a class="nav-link" href="/Graphic/ProductStockGraphic">Ürün Stok Bar</a>
                                    </nav>
                                </div>

                            </nav>
                        </div>
                        <div class="sb-sidenav-menu-heading">Rapor & Fatura</div>
                        <a class="nav-link" href="/Sales/Index/">
                            <div class="sb-nav-link-icon"><i class="fas fa-taxi"></i></div>
                            Satışlar
                        </a>

                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseInvoice" aria-expanded="false" aria-controls="collapseInvoice">
                            <div class="sb-nav-link-icon"><i class="fas fa-barcode"></i></div>
                            Faturalar
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseInvoice" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav"><a class="nav-link" href="/Invoice/Dynamic">Fatura</a><a class="nav-link" href="/Invoice/Index">Fatura Yazdır</a></nav>
                        </div>

                        @if (User.IsInRole("A"))
                        {
                            <a class="nav-link" href="/Personel/PersonelList">
                                <div class="sb-nav-link-icon"><i class="fas fa-people-carry"></i></div>
                                Personel Tablosu
                            </a>
                        }
                        <a class="nav-link" href="/Product/ListProduct">
                            <div class="sb-nav-link-icon"><i class="fas fa-print"></i></div>
                            Pdf ~ Excel
                        </a>
                        <a class="nav-link" href="/Statistics/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-database"></i></div>
                            İstatistikler
                        </a>



                        <a class="nav-link" href="/Statistics/SimplesTable">
                            <div class="sb-nav-link-icon"><i class="fas fa-signal"></i></div>
                            Hızlı Bakış
                        </a>

                        <a class="nav-link" href="/Cargo/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-car"></i></div>
                            Kargolar
                        </a>

                        <a class="nav-link" href="/QR/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-car"></i></div>
                            QR
                        </a>


                    </div>
                </div>
               
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2019</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Web/dist/js/scripts.js"></script>
     @RenderSection("scripts", required: false)
</body>
</html>


