﻿@using MvcOnlineTicariOtomasyon.Models.Classes
@using PagedList
@using PagedList.Mvc
@model List<Category>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2 style="margin-left:20px">
    Kategoriler <a href="/Category/AddCategory" class="btn btn-primary" style="width:100px;position:absolute;right:50px"><i class="fas fa-plus"></i> Ekle</a>
</h2>
<br />
<table id="tbl1" class="table table-bordered table-striped" style="margin-top:20px">
    <thead>
        <tr>
            <th>Kategori İsmi</th>
            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.CategoryName</td>
            <td><a href="/Category/DeleteCategory/@x.CategoryID" class="text-danger" data-toggle="tooltip" data-placement="top" title="Delete" onclick="return confirm('Silmek istediğinizden Emin Misiniz?')"><strong>X</strong></a></td>
            <td> <a href="/Category/BringCategory/@x.CategoryID" class="btn btn-success">Güncelle</a></td>
        </tr>
        }
    </tbody>
</table>
<br />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>

