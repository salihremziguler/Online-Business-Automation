@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departmanlar</h2>
<br />

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
       
        <th>Departman Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>

    </tr>

    @foreach (var k in Model)
    {

<tr>
    
    <td>
        @k.DepartmentName
    </td>
    <td><a href="/Department/DeleteDepartment/@k.DepartmentID" class="btn btn-danger" onclick="return confirm('Silmek istediğinizden Emin Misiniz?')">Sil</a></td>
    <td><a href="/Department/BringDepartment/@k.DepartmentID" class="btn btn-warning">Güncelle</a></td>
    <td><a href="/Department/DetailsDepartment/@k.DepartmentID" class="btn btn-default" style="background-color:lightcoral; color:white">Detaylar</a></td>


</tr>
    }
</table>

<a href="/Department/AddDepartment" class="btn btn-primary">Departman Ekle</a>


