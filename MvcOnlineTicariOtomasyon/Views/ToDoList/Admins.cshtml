﻿@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Admin>
@{
    ViewBag.Title = "Admins";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2 style="margin-left:20px">
    Adminler <a href="/ToDoList/AddAdmin" class="btn btn-primary" style="width:100px;position:absolute;right:50px"><i class="fas fa-plus"></i> Ekle</a>
</h2>
<br />
<table id="tbl67" class="table table-bordered table-striped" style="margin-top:20px">
    <thead>
        <tr>

            <th>ADMİN</th>
            <th>Yetki</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>

            <td>@x.Name</td>
            <td>@x.Authority</td>
            <td><a href="/ToDoList/DeleteAdmin/@x.AdminID" class="text-danger" data-toggle="tooltip" data-placement="top" title="Delete" onclick="return confirm('Silmek istediğinizden emin misiniz?')"><strong>Sil</strong></a></td>
        </tr>
        }
    </tbody>
</table>
<br />


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl67').dataTable({});
</script>
