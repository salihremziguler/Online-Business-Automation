﻿@model MvcOnlineTicariOtomasyon.Models.Classes.ToDoList
@{
    ViewBag.Title = "BringToDoList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Update</h2>
<br />
@using (Html.BeginForm("UpdateToDoList", "ToDoList", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.ToDoListID)
        @Html.LabelFor(x => x.Title)
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @required = "" })
        <br />
        @Html.LabelFor(x => x.Date)
        @Html.TextBoxFor(x => x.Date, new { @class = "form-control", @required = "" })
        <br />
        @Html.LabelFor(x => x.Hour)
        @Html.TextBoxFor(x => x.Hour, new { @class = "form-control", @required = "" })
        <br />
        <button class="btn btn-primary" style="width:100px"><i class="fas fa-pencil-alt"></i> Güncelle</button>
        <a class="btn btn-secondary" href="/ToDoList/Index" style="width:100px;color:white"><i class="fas fa-backspace"></i>  İptal</a>
    </div>
}

