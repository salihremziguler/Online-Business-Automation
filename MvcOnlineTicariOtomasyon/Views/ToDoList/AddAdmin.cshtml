﻿@model MvcOnlineTicariOtomasyon.Models.Classes.Admin
@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2> Admin Ekle</h2>
<br />
<form class="form-group" method="post">
    <label>Kullanıcı Adı</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @required = "" })
    <br />
    <label>Şifre</label>
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @required = "" })
    <br />
    <label>Yetki</label>
    @Html.DropDownListFor(x => x.Authority, (new SelectList(ViewBag.Authority)), new { @class = "form-control" })
    <br />
    <button class="btn btn-primary" style="width:100px"><i class="fas fa-plus"></i> Ekle</button>
    <a class="btn btn-secondary" href="/ToDoList/Admins" style="width:100px;color:white"><i class="fas fa-backspace"></i> İptal</a>
</form>

