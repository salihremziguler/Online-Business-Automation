@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<SalesMovement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />


<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <th>Sales ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>

        </tr>
    </thead>
    @foreach (var k in Model)
    {

        <tr>

           <td>@k.SalesID</td>
            <td>  @k.Product.ProductName</td>
            <td>  @k.Current.CurrentName @k.Current.CurrentSurname</td>
            <td>  @k.Personel.PersonelName @k.Personel.PersonelSurname</td>
            <td>  @k.Piece</td>
            <td>  @k.Price</td>
            <td>  @k.TotalPrice</td>
            <td>  @k.Date</td>



            <td><a href="/Sales/BringSales/@k.SalesID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Sales/SalesDetails/@k.SalesID" class="btn btn-default" style="background-color:lightcoral; color:white">Detaylar</a></td>


        </tr>
    }
</table>





