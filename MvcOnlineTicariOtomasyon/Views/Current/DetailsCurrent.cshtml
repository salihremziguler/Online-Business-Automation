@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<SalesMovement>
@{
    ViewBag.Title = "DetailsCurrent";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Cari Adı: @ViewBag.current</li>
</ol>


<table class="table table-condensed">
    <tr>
        <th>Satış Id</th>
        <th>Ürün</th>
        <th>Personel</th>
        <th>Cari</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
       
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.SalesID</td>
            <td>@x.Product.ProductName</td>
            <td>@x.Personel.PersonelName @x.Personel.PersonelSurname</td>
            <td>@x.Current.CurrentName @x.Current.CurrentSurname</td>
            <td>@x.Price</td>
            <td>@x.Piece</td>
            <td>@x.TotalPrice</td>
            <td>@x.Date</td>
           


        </tr>

    }


</table>
