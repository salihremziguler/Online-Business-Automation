@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Current>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />


<table class="table table-striped">

    <tr>

        <th>Ad ve Soyad</th>

        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>

            <td>@x.CurrentName @x.CurrentSurname</td>

            <td>@x.CurrentCity</td>
            <td>@x.CurrentMail</td>
            <td><a href="/Current/DeleteCurrent/@x.CurrentID" class="text-danger" data-toggle="tooltip" data-placement="top" title="Delete" onclick="return confirm('Silmek istediğinizden emin misiniz?')"><strong>X</strong></a></td>
            <td><a href="/Current/BringCurrent/@x.CurrentID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Current/DetailsCurrent/@x.CurrentID" class="btn btn-default" style="background-color:lightcoral">Satış Geçmişi </a></td>

        </tr>
    }


</table>
<a href="/Current/AddCurrent/" class="btn btn-info">Yeni Cari Ekle</a>

