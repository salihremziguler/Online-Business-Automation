@model MvcOnlineTicariOtomasyon.Models.Classes.CargoTracking
@{
    ViewBag.Title = "DescriptionCargo";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Açıklama Gir</h2>
<br />
<form class="form-group" method="post">
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Explanation, new { @class = "form-control", @required = "" })
    <br />
    @Html.LabelFor(x => x.date)
    <input type="text" name="Date" value="@DateTime.Now" class="form-control" readonly />
    <br />
    <button class="btn btn-primary" style="width:100px"><i class="fas fa-plus"></i> Ekle</button>
    <a class="btn btn-secondary" href="/Cargo/Index" style="width:100px;color:white"><i class="fas fa-backspace"></i>  İptal</a>
</form>

