﻿@model  MvcOnlineTicariOtomasyon.Models.Classes.Current

@using (Html.BeginForm("Update", "CurrentPanel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form class="form-horizontal">
        @Html.HiddenFor(x => x.CurrentID, new { @class = "form-control" })
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Ad</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CurrentName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Soyad</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CurrentSurname, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName2" class="col-sm-2 col-form-label">Şehir</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CurrentCity, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">Şifre</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CurrentPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Görsel</label>
            <div class="col-sm-10">
                <input type="file" name="CurrentImage" />
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-warning">Güncelle</button>
            </div>
        </div>
    </form>
}