@model MvcOnlineTicariOtomasyon.Models.Classes.Message
@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_CurrentLayout.cshtml";
}

<br />
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>AdminLTE 3 | Compose Message</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Yeni Mesaj Oluştur</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-3">
                <a href="/CurrentPanel/IncomingMessages" class="btn btn-primary btn-block mb-3">Gelen Kutusuna Geri Dön</a>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Klasörler</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <ul class="nav nav-pills flex-column">
                            <li class="nav-item active">
                                <a href="/CurrentPanel/IncomingMessages/" class="nav-link">
                                    <i class="fas fa-inbox"></i> Gelen Kutusu
                                    <span class="badge bg-gradient-blue float-right">@ViewBag.d1</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/CurrentPanel/OutgoingMessages/" class="nav-link">
                                    <i class="far fa-envelope"></i> Gönderilen Mesajlar
                                    <span class="badge bg-gradient-gray float-right">@ViewBag.d2</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/CurrentPanel/Starry" class="nav-link">
                                    <i class="fas fa-star"></i> Yıldızlı
                                    <span class="badge bg-gradient-navy float-right">@ViewBag.starry</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/CurrentPanel/Trash/" class="nav-link">
                                    <i class="far fa-trash-alt"></i> Çöp Kutusu
                                    <span class="badge bg-gradient-red float-right">@ViewBag.d3</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Yeni Mesaj Oluştur</h3>
                    </div>
                    <form class="form-group" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <input class="form-control" name="Receiver" placeholder="Kime:">
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="Title" placeholder="Konu:">
                            </div>
                            <div class="form-group">
                                <textarea id="compose-textarea" class="form-control" name="Content" style="height: 300px"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                            <div class="float-right">
                                <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Kapat</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
    <script src="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $(function () {
            $('#compose-textarea').summernote()
        })</script>
</body>
</html>
